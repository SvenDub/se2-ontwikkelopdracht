@using Ontwikkelopdracht.Models
@model Crewmember

@{
    ViewBag.Title = "Nieuwe Crew";
}

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Save", "Crew"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(crew => crew.Id)

    <div class="form-group label-floating">
        @Html.LabelFor(crew => crew.Name, new {@class = "control-label"})
        @Html.EditorFor(crew => crew.Name, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(crew => crew.Birth, new {@class = "control-label"})
        @Html.EditorFor(crew => crew.Birth, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(crew => crew.Gender, new {@class = "control-label"})
        @Html.EnumDropDownListFor(crew => crew.Gender, new {@class = "form-control"})
    </div>

    <div class="form-group label-floating">
        @Html.LabelFor(crew => crew.Bio, new {@class = "control-label"})
        @Html.TextAreaFor(crew => crew.Bio, new {@class = "form-control", rows = "15"})
    </div>

    <input class="btn btn-primary btn-raised" type="submit" value="Toevoegen"/>
    <input class="btn btn-raised" type="button" onclick="location.href = '@Url.Action("Index", "Crew")'" value="Annuleren"/>
}