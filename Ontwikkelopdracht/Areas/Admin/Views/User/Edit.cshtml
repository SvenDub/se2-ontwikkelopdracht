@using Ontwikkelopdracht.Models
@model User

@{
    ViewBag.Title = "Gebruiker Aanpassen";
}

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Save", "User"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(user => user.Id)

    <div class="form-group label-floating">
        @Html.LabelFor(user => user.Name, new {@class = "control-label"})
        @Html.EditorFor(user => user.Name, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group label-floating">
        @Html.LabelFor(user => user.Email, new {@class = "control-label"})
        @Html.EditorFor(user => user.Email, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group label-floating">
        @Html.LabelFor(user => user.Password, new {@class = "control-label"})
        @Html.EditorFor(user => user.Password, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="checkbox">
        <label>
            @Html.EditorFor(user => user.Admin) @Html.DisplayNameFor(user => user.Admin)
        </label>
    </div>

    <input class="btn btn-primary btn-raised" type="submit" value="Opslaan"/>
    <input class="btn btn-raised" type="button" onclick="location.href = '@Url.Action("Index", "User")'" value="Annuleren"/>
}