@using Ontwikkelopdracht.Models
@model Blog

@{
    ViewBag.Title = "Nieuw Blog";
}

<h1>Nieuw Blog</h1>
@using (Html.BeginForm("Save", "Blog"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(blog => blog.Id)

    <div class="form-group label-floating">
        @Html.LabelFor(blog => blog.Title, new {@class = "control-label"})
        @Html.EditorFor(blog => blog.Title, new {htmlAttributes = new {@class = "form-control"}})
    </div>

    <div class="form-group label-floating">
        @Html.LabelFor(blog => blog.Body, new {@class = "control-label"})
        @Html.TextAreaFor(blog => blog.Body, new {@class = "form-control", rows = "15"})
    </div>

    <div class="form-group">
        @Html.LabelFor(blog => blog.Author, new {@class = "control-label"})
        @Html.DropDownListFor(blog => blog.Author.Id, (IEnumerable<SelectListItem>) ViewBag.Author, new {@class = "form-control"})
    </div>

    <input class="btn btn-primary btn-raised" type="submit" value="Toevoegen"/>
    <input class="btn btn-raised" type="button" onclick="location.href='@Url.Action("Index", "Blog")'" value="Annuleren"/>
}